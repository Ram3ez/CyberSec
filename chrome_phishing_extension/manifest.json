{
  "manifest_version": 3,
  "name": "Phishing Detector",
  "version": "1.1",
  "description": "Detects potential phishing sites and allows you to toggle protection.",
  "permissions": ["tabs", "storage"],
  "host_permissions": ["https://r1shab-second-review.hf.space/"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
